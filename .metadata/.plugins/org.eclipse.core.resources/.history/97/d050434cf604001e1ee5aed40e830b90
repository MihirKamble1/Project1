package DemoWebShopPages;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.interactions.Actions;
import org.openqa.selenium.support.FindBy;
import org.openqa.selenium.support.PageFactory;
import org.testng.Assert;

public class HomePage {
	
	WebDriver driver;
	public HomePage(WebDriver driver) {
		this.driver=driver;
		PageFactory.initElements(driver, this);
	}
	
	
	Actions act = new Actions(driver);
	
	@FindBy(xpath="//*[text()='Register']")
	public WebElement RegisterButton;
	
	@FindBy(xpath="//*[text()='Log in']")
	public WebElement LoginButton;
	
	@FindBy(xpath="//*[text()='Shopping cart']")
	public WebElement ShoppingcartButton;
	
	@FindBy(xpath="//*[text()='Wishlist']")
	public WebElement WishlistButton;
	
	@FindBy(xpath="//*[text()='Computers']")
	public WebElement ComputersButton;
	
	@FindBy(xpath="//*[text()='Desktops']")
	public WebElement DesktopsButton;
	
	
	
	
	
	public void Verify() {
		Assert.assertTrue(RegisterButton.isDisplayed());
		Assert.assertTrue(LoginButton.isDisplayed());
		Assert.assertTrue(ShoppingcartButton.isDisplayed());
		Assert.assertTrue(WishlistButton.isDisplayed());
		
	}
	
	public void Click() {
		act.moveToElement(ComputersButton).click(DesktopsButton).build().perform();
	}
	

}
